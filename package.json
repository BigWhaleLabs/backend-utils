{
  "name": "@big-whale-labs/backend-utils",
  "version": "0.0.15",
  "description": "Backend utils used by BWL products",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/BigWhaleLabs/backend-utils"
  },
  "license": "MIT",
  "files": [
    "dist"
  ],
  "np": {
    "2fa": false,
    "tests": false,
    "cleanup": false,
    "yarn": false
  },
  "scripts": {
    "release": "np",
    "prepare": "ts-patch install -s",
    "develop": "yarn prepare && tsc-watch --skipLibCheck --onSuccess 'node dist/index.js'",
    "build": "yarn prepare && tsc --skipLibCheck",
    "pretty": "prettier --check src",
    "lint": "yarn pretty && eslint --max-warnings 0 --ext ts,tsx,json src",
    "prepublishOnly": "yarn lint && yarn build"
  },
  "dependencies": {
    "@hapi/boom": "^10.0.0",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.13.2",
    "class-validator-jsonschema": "^3.1.1",
    "koa": "^2.13.4",
    "module-alias": "^2.2.2"
  },
  "devDependencies": {
    "@types/koa": "^2.13.4",
    "@types/node": "^17.0.41",
    "@typescript-eslint/eslint-plugin": "^5.27.1",
    "@typescript-eslint/parser": "^5.27.1",
    "eslint": "^8.17.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-no-relative-import-paths": "^1.3.3",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-sort-imports-es6-autofix": "^0.6.0",
    "np": "^7.6.1",
    "prettier": "^2.6.2",
    "ts-patch": "^2.0.1",
    "tsc-watch": "^5.0.3",
    "typescript": "^4.7.3",
    "typescript-transform-paths": "^3.3.1"
  },
  "_moduleAliases": {
    "@": "dist"
  },
  "packageManager": "yarn@3.1.0"
}
